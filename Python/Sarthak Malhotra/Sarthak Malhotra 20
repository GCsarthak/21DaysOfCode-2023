def find_largest_number(numbers):
    if not numbers:  # Check if the list is empty
        return None
    largest = numbers[0]  # Initialize largest as the first element
    for num in numbers:
        if num > largest:
            largest = num
    return largest




def find_second_smallest(numbers):
    if len(numbers) < 2:  # Check if the list has at least two elements
        return None
    smallest = min(numbers)  # Find the smallest element in the list
    second_smallest = float('inf')  # Initialize second_smallest as positive infinity
    for num in numbers:
        if num > smallest and num < second_smallest:
            second_smallest = num
    if second_smallest == float('inf'):  # If no second smallest found, return None
        return None
    return second_smallest


